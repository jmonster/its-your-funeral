{{#if session.isAuthenticated}}

  Logged in as {{session.currentUser.name}}
  <button {{action "signOut"}}>Sign out</button>
  {{outlet}}

{{else}}

  <div class="login-form">
    <div class="row">
      <div class="large-3 small-0 columns"></div>
      <div class="large-6 small-12 columns">
        <div class="row collapse prefix-radius">
          <div class="small-3 columns">
            <span class="prefix">Email</span>
          </div>
          <div class="small-9 columns">
            {{input type="email" value=email}}
          </div>
        </div>
      </div>
      <div class="large-3 small-0 columns"></div>
    </div>
    <div class="row">
      <div class="large-3 small-0 columns"></div>
      <div class="large-6 small-12 columns">
        <div class="row collapse prefix-radius">
          <div class="small-3 columns">
            <span class="prefix">Password</span>
          </div>
          <div class="small-9 columns">
            {{input type="password" value=password}}
          </div>
        </div>
      </div>
      <div class="large-3 small-0 columns"></div>
    </div>
    <div class="row">
      <div class="large-3 small-0 columns"></div>
      <div class="large-6 small-12 columns">
        <div class="small-6 columns">
          <button {{action "signIn" "password" email password}}>sign in</button>
        </div>
        <div class="small-6 columns">
          <button {{action "signUp" email password}}>sign up</button>
        </div>
      </div>
      <div class="large-3 small-0 columns"></div>
    </div>
  </div>

{{/if}}
